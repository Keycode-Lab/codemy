template(name="navbar")
  .navbar-codemy.clearfix
    .container.mobile-navbar
      ul.navbar
        .pull-left.clearfix
          li
            a.logo(href="{{pathFor 'home'}}")
                | CODEMY
        .pull-right.clearfix
          if currentUser
            li
                a.notification(href="#")
                  span.badge.badge-primary
                    | 10
          li
            a(href="#")
              i.fa.fa-search
          li
            a(href="{{pathFor 'submit'}}")
              i.fa.fa-pencil
          if currentUser
            li.dropdown
              a.dropdown-toggle(href="" data-toggle="dropdown" aria-expanded="true")
                i.fa.fa-cog
                i.fa.fa-chevron-down
              +dropdownAccount
          else

            li
              a(href="{{pathFor 'signin'}}")
                //-i.li_settings
                | Sign-In
