template(name="answerItem")
  .main.postpage
    .post-header
      .post-side
        .profile-wrapper.hidden-tn.hidden-xxs.hidden-xs(class="{{userStatusBorder}}")
              img(src="/img/avatar.png")
        +voting
      .post-metadata.clearfix
        p
          span.author
            | <strong>{{user.username}} {{isonline}}</strong>
          span.date
            | {{moFromNow createdAt withoutSuffix}}
        h2.post-title Answer by {{user.username}}
    .post-body
      hr
      +markdown
        {{content}}
      ul.comments-list
        each commentAnswer
          +commentItem
        if nextPath
          a.load-more-commentAnswer(href="")
            | 더 보기
      a.add-comment(href="")
        | <strong>댓글 남기기</strong>
      +commentAnswerSubmit
   .post-footer