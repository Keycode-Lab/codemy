template(name="postItem")
  li.question-item.clearfix
    .profile-wrapper.hidden-tn.hidden-xxs
      img(src="/img/avatar.png")
    .question-meta
      h4
        a(href="{{pathFor 'postPage'}}")
          | {{title}}
      p
        span.author
          | by
          strong {{user.username}}
        span.comment
          i.icon-chat-alt
          | {{commentsCount}}
        span.votes
          i.icon-coffee
          | {{votes}}
        span.answers.visible-tn-inline.visible-xxs-inline.hidden-xs
          if answered
            i.fa.fa-check.checked
          else
            i.fa.fa-check
          | 0
    .answer-count.hidden-tn.hidden-xxs
      span.answer
        | Answers
      span.count
        if answered
          i.fa.fa-check.checked
        | {{answersCount}}
    .row-fluid.tags(style="margin-top: 10px;")
      each tags
        .label.label-outline.label-red(style="margin-right: 5px;")
          | {{this}}